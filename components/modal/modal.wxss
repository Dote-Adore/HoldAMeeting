/* components/Modal.wxss */
page{
  height: 100%;
}
.modal_BG{
  top: 0;
  position: fixed;
  background-color: #000000;
  z-index: 20;
  opacity: 0;
  left: 0;
}
.modal_body{
  background-color: white;
  width: 250px;
  margin: auto;
  border-radius: 20px;
  padding: 20px 10px 20px 10px;
}
.modal_title{
  text-align: center;
  font-size: 17px;
  margin-bottom: 20px;
  color: #353535;
}
.modal_foot{
  width: 100%;
  height: 30px;
  margin: auto;
  margin-top: 30px;
  background-color: white;
}
.modal_btn{
  border-radius: 20px;
  margin: 0 0 0 10px;
  line-height: 40px;
  float: left;
  width: 110px;
  text-align: center
}
.modal_confirm{
  margin: 0 10px 0 0;
  float:right;
  color: white;
  background: linear-gradient(to right,#8BB8FA,#409EFF);

}